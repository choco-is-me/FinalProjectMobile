<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name= "AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/MaterialDark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="imageButtonStyle">@style/ImageButton_Style_Dark</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:statusBarColor">@color/MaterialDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>

        <item name="materialCardViewStyle">@style/CardView.AclockStyle</item>
    </style>


    <style name="MoPresetCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/MaterialGrey</item>
        <item name="cardElevation">@dimen/card_elevation_night</item>
    </style>

    <style name="ImageButton_Style_Dark" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="CardView.AclockStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">5dp</item>
    </style>




</resources>